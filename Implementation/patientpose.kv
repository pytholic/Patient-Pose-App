<MyGridLayout>

	train_path: train_path
	test_path: test_path
	model_path: model_path

	GridLayout:
		cols: 1
		size: root.width, root.height
		size_hint: (0.9, 0.9)
		pos_hint: {"center_x": 0.5, "center_y": 0.5}

		Image:
			source: "./resources/logo.png"

		GridLayout:
			cols: 2
			size_hint: (0.9, 0.9)
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			raw_force_default: True
			row_default_height: 50

			Label:
				text: "Train Folder: "
				font_size: 20
				color: '#00FFCE'
				size_hint_x: None
				width: 250
			
			TextInput:
				id: train_path
				multiline: False
				font_size: 18
				padding_y: (15, 10)

			Label:
				text: "Test Folder: "
				font_size: 20
				color: '#00FFCE'
				size_hint_x: None
				width: 250
			
			TextInput:
				id: test_path
				multiline: False
				font_size: 18
				padding_y: (15, 10)
			
			Label:
				text: "Model Folder: "
				font_size: 20
				color: '#00FFCE'
				size_hint_x: None
				width: 250
			
			TextInput:
				id: model_path
				multiline: False
				font_size: 18
				padding_y: (15, 10)

		GridLayout:
			cols: 3
			size_hint: (0.9, 0.9)
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			raw_force_default: True
			row_default_height: 50

			Button:
				text: "TRAIN MODEL"
				font_size: 18
				on_press: root.press_train()

			Button:
				text: "TEST MODEL"
				font_size: 18
				on_press: root.press_test()

			Button:
				text: "EXPORT MODEL"
				font_size: 18
				on_press: root.press_export()