<MyLayout>

	train_path: train_path
	test_path: test_path
	model_path: model_path

	GridLayout:
		cols: 1
		size: root.width * 0.95, root.height * 0.95
		center: root.width / 2, root.height / 2

		Image:
			source: "./resources/logo.png"

		GridLayout:
			cols: 2
			size_hint: (1, 1)
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			padding: 50
			spacing: 10
			row_default_height: 50
        	row_force_default: True

			Label:
				text: "Train Folder: "
				font_size: 20
				color: '#00FFCE'
				size_hint_x: None
				width: 250
			
			TextInput:
				id: train_path
				multiline: False
				font_size: 18
				padding_y: (15, 10)

			Label:
				text: "Test Folder: "
				font_size: 20
				color: '#00FFCE'
				size_hint_x: None
				width: 250
			
			TextInput:
				id: test_path
				multiline: False
				font_size: 18
				padding_y: (15, 10)
			
			Label:
				text: "Model Folder: "
				font_size: 20
				color: '#00FFCE'
				size_hint_x: None
				width: 250
			
			TextInput:
				id: model_path
				multiline: False
				font_size: 18
				padding_y: (15, 10)

		BoxLayout:
			cols: 3
			size_hint: (0.7, 0.7)
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			padding: 50
			spacing: 10

			Button:
				text: "TRAIN MODEL"
				font_size: 18
				on_press: root.press_train()

			Button:
				text: "TEST MODEL"
				font_size: 18
				on_press: root.press_test()

			Button:
				text: "EXPORT MODEL"
				font_size: 18
				on_press: root.press_export()
